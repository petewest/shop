<div class="form-control">
  <%= f.label :label, class: "control-label" %>
  <%= f.text_field :label, class: "form-control" %>
  <p class="help-block">Use the label field to give the address a name, like &lsquo;Home&rsquo;</p>
</div>
<div class="form-control">
  <%= f.label :address, class: "control-label" %>
  <%= f.text_area :address, class: "form-control" %>
</div>
<div class="check-box">
  <label>
    <%= f.check_box :default_delivery %> Default delivery address
  </label>
</div>
<div class="check-box">
  <label>
    <%= f.check_box :default_billing %> Default billing address
  </label>
</div>
