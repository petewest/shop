<div class="order_item order_status_<%= order.status%>">
	<div class="order_id">
		<%= link_to "Order ID: #{order.id}", order_path(order) %>
		<span class="order_status">
			Status: <%= order.status %>
		</span>
		<span class="status_date">
			<%= " on #{l(order.send(order.status + '_at'))}" if order.try(order.status+'_at') %>
		</span>
	</div>
	<div class="order_body">
		<div class="order_summary">
			<%= render partial: 'line_item_summary', collection: order.line_items %>
		</div>
		<div class="order_total">
			Total cost: <%= cost_to_currency(*order.costs) %>
		</div>
		<div class="order_actions">
			<% if order.is_a? Cart %>
				<%= form_for order, url: set_current_order_path(order) do |f| %>
					<div class="btn-group-vertical">
						<%= f.submit "Continue this order", class: "btn btn-default" %>
						<%= f.submit "Checkout", class: "btn btn-primary" %>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
