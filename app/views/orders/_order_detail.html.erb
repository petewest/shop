<div class="order_detail" id="<%= css_id(order) %>">
	<%= render 'orders/address', order: order, mode: :billing %>
	<%= render 'orders/address', order: order, mode: :delivery %>
	<div class="line_item_summary">
		<%= render 'shared/order_header' %>
		<%= render partial: 'line_items/line_item', collection: order.line_items %>
		<%= render 'shared/order_footer', order: order %>
	</div>
</div>

