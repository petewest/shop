<%= form_for @order do |f| %>
  <%= render 'shared/form_error', object: f.object %>
  <div id="line_items" class="cart_container">
    <%= f.fields_for :line_items do |item| %>
      <div class="row">
        <%= item.hidden_field :product_id %>
        <div class="col-md-offset-2 col-md-3">
          <%= item.object.product.name %>
        </div>
        <div class="col-md-1">
          <%= item.number_field :quantity, class: "form-control", disabled: true%>
          <%= item.hidden_field :quantity %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="btn-group pull-right">
    <%= link_to "Continue shopping", products_path, class: "btn btn-default" %>
    <%= link_to "Edit basket", cart_index_path, class: "btn btn-default" %>
    <%= f.submit "Place order", data: {disable_with: 'Placing order'}, class: "btn btn-primary" %>
  </div>
<% end %>
