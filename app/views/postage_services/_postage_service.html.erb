<div class="panel panel-default" id="<%= css_id(postage_service) %>">
	<div class="panel-heading">
		<%= postage_service.name %>
		<%= action_bar(postage_service, dropdown: true, remote: true) do |bar| %>
			<%= bar.item "New postage cost", new_postage_service_postage_cost_path(postage_service), data: {modal_target: '#modal'} %>
		<% end %>
	</div>
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th>From weight</th>
				<th>To weight</th>
				<th>Cost</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody id="costs_for_<%= css_id(postage_service) %>">
			<%= render postage_service.postage_costs %>
		</tbody>
	</table>
</div>
