<%

title=["Allocated stock"]
title<<"for orders with status #{params[:order_status]}" if params[:order_status] and params[:order_status].in?(Order.statuses.keys)
title<<"grouped by product" if params[:by_product]

title=title.join(" ")

%>

<% provide(:title, "Allocated stock") %>

<%= filter_bar(allocation_filter) %>

<%= content_tag(:h1, title) %>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>
				Details
			</th>
			<th>
				Product
			</th>
			<th>
				Quantity
			</th>
		</tr>
	</thead>
	<tbody>
		<%= render @allocations %>
	</tbody>
</table>