<% provide(:title, "Shopping cart") %>

<%= content_tag(:h1, "Shopping cart") %>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>
				Product
			</th>
			<th>
				Actions
			</th>
			<th class="text-right">
				Item cost
			</th>
			<th class="text-right">
				Total cost
			</th>
		</tr>
	</thead>
	<tbody>
		<%= render collection: @line_items, partial: 'line_item' %>
		<%= render 'total' %>
	</tbody>
</table>

<div class="btn-group pull-right">
<%= link_to "Continue shopping", products_path, class: "btn btn-default" %>
<%= link_to "Checkout", checkout_path, class: "btn btn-primary" %>
</div>
