<div id="flash">
<% flash.each do |key, value| %>
	<% case key
	when "notice"
		key="warning"
	end %>
	<%= content_tag(:div, class: "alert alert-#{key} alert-dismissable") do %>
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<%= value %>
	<% end %>
<% end %>
</div>