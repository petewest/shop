<div class="cart_product">
	<div class="form-group">
	<label class="label-control"><%= f.object.product.name %></label>
	<%= f.hidden_field :product_id %>
	</div>
</div>
<div class="cart_actions">
	<div class="form-group">
		<%= f.text_field :quantity, value: f.object.quantity, class: "form-control", data: {total_field: "total_cost_#{css_id(f.object)}", item_cost: f.object.product.cost.value} %>
	</div>
</div>
<div class="cart_line_item text-right">
	<%= cost_to_currency(f.object.product.cost) %>
</div>
<div class="cart_line_cost text-right">
	<%= f.object.product.cost.currency.symbol -%>
<span id="total_cost_<%=css_id(f.object)%>"><%= f.object.cost.value if f.object.cost %>
	</span>
</div>
<% if !f.object.new_record? %>
<div class="cart_save_button">
	<div class="checkbox">
		<label>
			<%= f.check_box :_destroy %> Remove
		</label>
	</div>
</div>
<% end %>