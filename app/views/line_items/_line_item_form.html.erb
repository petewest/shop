<div class="row" id="<%=css_id(line_item_form)%>">
<%= form_for line_item_form, remote: true, html: {class: "form-inline"} do |f| %>
	<% if f.object.errors.any? %>
		<%= render 'shared/form_error', object: f.object %>
	<% end %>
	<div class="cart_product">
		<div class="form-group">
		<label class="label-control"><%= line_item_form.product.name %></label>
		<%= f.hidden_field :product_id %>
		</div>
	</div>
	<div class="cart_actions">
		<div class="form-group">
			<%= f.text_field :quantity, value: line_item_form.quantity, class: "form-control", data: {total_field: "total_cost_#{css_id(line_item_form)}", item_cost: line_item_form.product.cost.value} %>
		</div>
	</div>
	<div class="cart_line_item text-right">
		<%= cost_to_currency(line_item_form.product.cost) %>
	</div>
	<div class="cart_line_cost text-right">
		<%= line_item_form.product.cost.currency.symbol %>
		<span id="total_cost_<%=css_id(line_item_form)%>">
		<%= line_item_form.cost.value if line_item_form.cost %>
		</span>
	</div>
	<div class="cart_save_button">
		<%= f.submit "Save", class: "btn btn-default" %>
	</div>
<% end %>
</div>
