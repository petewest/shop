<% selector=(mode+"_address").to_sym %>
<div class="address_wrapper">
	<div class="address_picker">
		<%= form_for [:update_address, @cart], remote: true do |f| %>
		<div class="form-group">
			<%= f.label selector, class: "control-label" %>
			<%= f.collection_select selector, current_user.addresses, :id, :label, {}, class: "form-control" %>
		</div>
		<div class="btn-group">
			<%= link_to "Manage", addresses_path, class: "btn btn-default" %>
			<%= f.submit "Select", class: "btn btn-default" %>
		</div>
		<% end %>
	</div>
	<div class="order_address" id="<%= mode %>_address">
		<%= address %>
	</div>
</div>