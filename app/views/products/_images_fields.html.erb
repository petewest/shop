<div class="checkbox">
<label><%= f.check_box :main %> Main image</label>
</div>
<div class="form-group">
  <%= f.label :image, class: "control-label" %>
  <%= f.file_field :image %>
</div>
<% if !f.object.new_record? %>
<div class="checkbox">
<label><%= f.check_box :_destroy %> Remove</label>
</div>
<% end %>
