<%= render 'shared/form_error', object: f.object %>
<div class="form-group">
	<%= f.label :name, class: "control-label" %>
	<%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :description, class: "control-label" %>
	<%= f.text_area :description, class: "form-control", rows: 20 %>
</div>
<div class="form-group">
	<%= f.label :weight, class: "control-label" %>
	<%= f.text_field :weight, class: "form-control" %>
	<p class="help-block">
		Weight will be used to calculate delivery costs.  You can use whichever units you like as long as you're consistent.  You can set all items to have a weight of '1' if you'd rather calculate delivery cost by number of units.
	</p>
</div>
<div class="cost">
        <%= render 'shared/cost_fields', f: f %>
    </div>
<div class="image_list">
	<%= f.fields_for :images do |image| %>
		<%= render 'images_fields', f: image %>
	<% end %>
</div>
<div class="form-group">
	<%= f.submit "Submit", data: {disable_with: 'Submitting...'}, class: "btn btn-default" %>
</div>
