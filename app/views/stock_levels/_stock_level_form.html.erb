<%
options={}
#If we've started in remote:true, we'll stay that way
options[:remote]=true if request.xhr?
%>
<%= form_for [product, stock_level], options do |f| %>
  <%= render 'shared/form_error', object: f.object %>
  <div class="form-group">
    <%= f.label :due_at, class: "control-label" %>
    <%= f.date_field :due_at, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :expires_at, class: "control-label" %>
    <%= f.date_field :expires_at, class: "form-control" %>
    <p class="help-block">If the items will only be available for a limited time put the end date here.  Optional.</p>
  </div>
  <div class="form-group">
    <%= f.label :start_quantity, class: "control-label" %>
    <%= f.text_field :start_quantity, class: "form-control" %>
  </div>
  <div class="checkbox">
    <label class="control-label">
    <%= f.check_box :allow_preorder %> Allow pre-order
    </label>
  </div>
  <%= f.submit data: {disable_with: "Submitting"}, class: "btn btn-default" %>
<% end %>
