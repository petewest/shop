<div class="panel product_<%=  product.for_sale? ? '' : 'not_' %>for_sale">
	<div class="panel-heading">
		<%= link_to product.name, product %>
		<%= action_bar product, dropdown: true do |a| %>
			<%= a.item "Add sub product", new_product_sub_product_path(product) %>
			<%= a.item "Add stock", new_product_stock_level_path(product), data: { modal_target: '#modal' } %>
		<% end %>
		<div class="clearfix"></div>
	</div>
	<%= render 'stock_levels/product_stock_level', product: product %>
	<% if product.sub_products.any? %>
		<div class="panel-body">
			<%= render partial: 'product', collection: product.sub_products %>
		</div>
	<% end %>
</div>

