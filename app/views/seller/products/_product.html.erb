<div class="panel panel-info">
	<div class="panel-heading">
		<%= link_to product.name, product %>
		<%= action_bar product, dropdown: true do %>
			<li><%= link_to "Add sub product", new_product_sub_product_path(product), class: "btn btn-default" %></li>
			<li><%= link_to "Add stock", new_product_stock_level_path(product), class: "btn btn-default" %></li>
		<% end %>
		<div class="clearfix"></div>
	</div>
	<% if product.stock_levels.any? %>
		<table class="table table-striped">
			<%= render 'stock_levels/stock_level_header' %>
			<tbody>
				<%= render partial: 'stock_levels/stock_level', collection: product.stock_levels %>
			</tbody>
		</table>
	<% end %>
	<% if product.sub_products.any? %>
		<div class="panel-body">
		<%= render partial: 'product', collection: product.sub_products %>
		</div>
	<% end %>
</div>

