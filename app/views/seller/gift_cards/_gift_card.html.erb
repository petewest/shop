<div class="gift_card">
	<%= action_bar(gift_card, dropdown: true, namespace: :seller) do |action| %>
		<%= action.item(t('.action.orders'), seller_gift_card_orders_path(gift_card)) %>
	<% end %>
	<div class="gift_card_buyer">
		Buyer:
		<%= gift_card.buyer.name %>
	</div>
	<div class="gift_card_redeemer">
		Redeemer:
		<%= gift_card.redeemer.name if gift_card.redeemer %>
	</div>
	<div class="gift_card_link">
		<%= link_to "Redeem", redeem_gift_cards_url(id: gift_card.encoded_token) %>
	</div>
	<div class="gift_card_value">
		Value:
		<%= to_currency(gift_card.current_value, gift_card.currency) %>
	</div>
</div>
